{
  "name": "resfeber",
  "version": "1.0.0",
  "description": "",
  "main": "server.js",
  "scripts": {
    "start": "if-env NODE_ENV=production && npm run start:prod || npm run start:dev",
    "start:prod": "node server.js",
    "start:dev": "concurrently \"nodemon --ignore 'client/*'\"\"npm run client\"",
    "client": "cd client && yarn start",
    "server": "nodemon server.js",
    "dev": "concurrently --kill-others-on-fail \"node server\" \"node client\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/victoriagoesplaces/resfeber.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/victoriagoesplaces/resfeber/issues"
  },
  "homepage": "https://github.com/victoriagoesplaces/resfeber#readme",
  "devDependencies": {
    "concurrently": "^4.0.1",
    "nodemon": "^1.18.4"
  },
  "dependencies": {
    "body-parser": "^1.18.3",
    "dotenv": "^6.0.0",
    "express": "^4.16.3",
    "if-env": "^1.0.4",
    "mongojs": "^2.3.0",
    "mongoose": "^5.3.2",
    "morgan": "^1.7.0"
  }
}
